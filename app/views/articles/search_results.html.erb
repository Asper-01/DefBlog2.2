<div class="banner-container">
  <!-- Section du titre des résultats de recherche -->
  <div class="last-articles-separator">
    <span class="last-articles-title mt-3 mb-3">Résultats de la recherche "<%= params[:q] %>"</span>
  </div>

  <!-- Grille des résultats de recherche avec une marge personnalisée -->
  <div class="mt-5"> <!-- Ajustez ici avec la classe mt-5 ou une autre -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 pt-3">
      <% @results.each do |article| %>
        <div class="col-lg-4 col-md-6 col-12 last-article-card">
          <div class="card-2 last-article">
            <% if article.image.attached? %>
              <!-- Conteneur de l'image de l'article -->
              <div class="last-article-image-container" style="position: relative;">
                <%= link_to article_path(article) do %>
                  <%= image_tag article.image, class: 'last-article-image' %>
                <% end %>

                <!-- Badge compteur de commentaires -->
                <%= render 'articles/comment_count_badge', article: article %>
              </div>
            <% else %>
              <!-- Texte alternatif si aucune image n'est disponible -->
              <p class="last-article-no-image">Aucune image disponible</p>
            <% end %>

            <!-- Corps de l'article -->
            <div class="last-article-body">
              <!-- Inclusion des tags et de la date de publication -->
              <%= render 'articles/tags', article: article %>

              <!-- Titre de l'article -->
              <h5 class="last-article-title">
                <%= link_to article.title, article_path(article) %>
              </h5>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
