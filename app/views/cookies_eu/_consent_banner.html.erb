<div data-controller="cookies-consent">
  <div id="cookies-modal" data-cookies-consent-target="modal" class="modal fade" tabindex="-1" aria-labelledby="cookiesModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h2 id="cookies-modal-title" class="font-bold mb-2" style="font-size: 1.2rem;">
            Gestion des cookies
          </h2>
          <div class="logo-background" style="position: absolute; inset: 0; z-index: 1; opacity: 0.1; background-image: url('/path/to/your/logo.png'); background-repeat: no-repeat; background-size: 60%; background-position: center;"></div>
        </div>
        </div>
        <div class="modal-body" style="padding: 0.75rem 1rem;">
          <p id="cookies-modal-description" class="text-sm text-gray-700 mb-2" style="font-size: 0.875rem;">
            Nous utilisons des cookies essentiels (non désactivables) ainsi que des cookies statistiques pour analyser notre site.
            <a href="/legal">Politique de confidentialité</a>
          </p>
        </div>
        <div class="modal-footer" style="padding: 0.75rem 1rem;">
          <button type="button" data-action="click->cookies-consent#accept" class="btn btn-accept" id="accept-cookies-btn" style="padding: 0.375rem 0.75rem; font-size: 0.875rem;">
            Accepter
          </button>
          <button type="button" data-action="click->cookies-consent#reject" class="btn btn-reject" id="reject-cookies-btn" style="padding: 0.375rem 0.75rem; font-size: 0.875rem;">
            Refuser
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Inclusion du fichier JavaScript pour les cookies-->
<%= javascript_include_tag "cookies/consent_banner.js", defer: true %>


<style>
  /* Positionner la modale en bas à droite */
#cookies-modal .modal-dialog {
  position: fixed;
  bottom: 40px;
  right: 40px;
  margin: 0;
  width: 400px;
  border-radius: 8px;
  overflow: hidden;
}

#cookies-modal .modal-content {
  background-color: white;
  border: none;
}

#cookies-modal .modal-header,
#cookies-modal .modal-body,
#cookies-modal .modal-footer {
  background-color: white;
  padding: 0.75rem 1rem;
  border: none; /* Supprime la bordure */
}

#cookies-modal .modal-footer {
  display: flex;
  justify-content: center; /* Centre les boutons horizontalement */
  gap: 10px; /* Espacement entre les boutons */
}

/* Style des boutons */
.btn-accept, .btn-reject {
  background-color: #6c757d; /* Gris foncé */
  color: white; /* Texte blanc */
  border: none; /* Pas de bordure */
  border-radius: 6px; /* Coins arrondis */
  padding: 0.375rem 0.75rem;
  font-size: 0.875rem;
  transition: background-color 0.3s, color 0.3s; /* Transition douce pour les couleurs */
}

/* Style au survol */
.btn-accept:hover, .btn-reject:hover {
  background-color: #5a6268; /* Gris plus foncé au survol */
  color: #fff; /* Garder le texte blanc au survol */
}

/* Style du bouton "Refuser " spécifique */
.btn-reject {
  background-color: #6c757d; /* Gris foncé */
  color: white;
  border-radius: 8px; /* Coins arrondis */
  transition: color 0.3s; /* Transition douce pour le hover */
}

.btn-reject:hover {
  background-color: #5a6268; /* Gris plus foncé au survol */
  color: white; /* Texte blanc au survol */
}


</style>
