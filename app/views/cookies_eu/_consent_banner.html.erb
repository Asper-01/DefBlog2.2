  }

  /* Enlever les bordures et lignes */
  #cookies-modal .modal-content {
    border: none;
    border-radius: 8px;
  }

  #cookies-modal .modal-header {
    border-bottom: none;
    padding: 0.5rem;
  }

  #cookies-modal .modal-body {
    padding: 0.75rem 1rem;
  }

  #cookies-modal .modal-footer {
    border-top: none;
    padding: 0.75rem 1rem;
    display: flex;
