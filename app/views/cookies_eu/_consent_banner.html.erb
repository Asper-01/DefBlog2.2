<div data-controller="cookies-consent">
  <!-- Modal pour la gestion des cookies -->
  <div id="cookies-modal" data-cookies-consent-target="modal" class="modal fade" tabindex="-1" aria-labelledby="cookiesModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <!-- En-tête du modal -->
        <div class="modal-header">
          <h2 id="cookies-modal-title" class="font-bold mb-2" style="font-size: 1.2rem;">
            Gestion des cookies
          </h2>
          <!-- Image en arrière-plan de l'en-tête -->
          
        </div>

        <!-- Corps du modal -->
        <div class="modal-body" style="padding: 0.75rem 1rem;">
          <p id="cookies-modal-description" class="text-sm text-gray-700 mb-2" style="font-size: 0.875rem;">
            Nous utilisons des cookies essentiels (non désactivables) ainsi que des cookies statistiques pour analyser notre site.
            <a href="/legal">Politique de confidentialité</a>
          </p>
        </div>

        <!-- Pied de page du modal avec les boutons d'action -->
        <div class="modal-footer" style="padding: 0.75rem 1rem;">
          <!-- Bouton pour accepter les cookies -->
          <button type="button" data-action="click->cookies-consent#accept" class="btn btn-accept" id="accept-cookies-btn" style="padding: 0.375rem 0.75rem; font-size: 0.875rem;">
            Accepter
          </button>
          <!-- Bouton pour refuser les cookies -->
          <button type="button" data-action="click->cookies-consent#reject" class="btn btn-reject" id="reject-cookies-btn" style="padding: 0.375rem 0.75rem; font-size: 0.875rem;">
            Refuser
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Inclusion du fichier JavaScript pour la gestion des cookies -->
<%= javascript_include_tag "cookies/consent_banner.js", defer: true %>
